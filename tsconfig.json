{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "sourceMap": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "jsx": "react",
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ESNext"
      ],
      "allowJs": true,
      "outDir": "./dist",
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", ".build"]
  }
  